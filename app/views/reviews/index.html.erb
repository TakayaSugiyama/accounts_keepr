<div class = "container mt-4">
  <div class = "row">   
      <% @reviews.each do |review| %>
        <div class = "col-md-6 mb-3">
          <div class = "card">
            <%# ここから商品名とタイトルと評価 %>
            <div class = "card-header text-center">
              <p>商品名: <%= review.product.name %></p>
              <p>タイトル:  <%= review.title %></p>
              <p>投稿者: <%= review.user.name %></p>
              <div id ="star_index"></div>
            </div>
            <%# ここまで商品名とタイトルと評価 %>
            <%# ここからレビュー本文と画像 %>
            <div class = "card-body index-card">
              <%= truncate review.content, length: 40 %> 
              <div class = "mt-3 text-center">
                <% if review.images.any? %>
                  <%= image_tag review.images.first.image.url , class: "img-fluid index-image"%>
                <% else %>
                  <%= image_tag "review.jpg" ,class: "img-fluid index-image" %>
                <% end %>
              </div>
            </div>
            <%# ここまでレビュー本文と画像 %>
            <div class = "card-footer text-center">
              <%= link_to "詳細を見る", review_path(review) , class: "btn btn-success"%>
            </div>
          </div>
        </div>
      <% end %> 
  </div>
</div>


