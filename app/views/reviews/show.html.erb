<div class = "container mt-3">
  <div class = "card">
    <%# ここから商品名とタイトルと評価 %>
    <div class = "card-header text-center">
      <p>商品名: <%= @review.product.name %></p>
      <p>タイトル:  <%= @review.title %></p>
      <div id ="star_index"></div>
    </div>
    <%# ここまで商品名とタイトルと評価 %>
    <%# ここからレビュー本文と画像 %>
    <div class = "card-body index-card">
      <p><%= @review.content %></p>
      <div class = "mt-3">
        <% if @review.images.any? %>
          <% @review.images.each do |image| %>
             <%= image_tag image.image.url , class: "img-fluid index-image"%>
          <% end %>
        <% else %>
          <%= image_tag "review.jpg" ,class: "img-fluid index-image" %>
        <% end %>
      </div>
    </div>
    <%# ここまでレビュー本文と画像 %>
    <div class = "card-footer text-center">
       <% if current_user %>
        <% if @review.user == current_user %>
          <%= link_to "削除", review_path(@review), method: :delete, class: "btn btn-danger" %>
        <% end %>
       <% end %>
    </div>
  </div>
</div>

<script>
  $('#star').raty({
    score : "<%= @review.rating %>",
    path: '/assets/',
    readOnly: true
  });
</script>

