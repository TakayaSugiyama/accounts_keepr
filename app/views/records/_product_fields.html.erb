<div class = "nested-fields">
  <div class = "field">
    <%= f.text_field :name %>
    <%= f.number_field :price %>
    <%# 商品画像ここから %>
    <%= f.fields_for :images do |image| %>
      <%= render 'image_fields', f: image %>
      <div class = "links mb-3">
        <%= link_to_add_association "画像を追加する",f, :images , class: "btn btn-success"%>
      </div>
    <% end %>
    <%# 商品画像ここまで %>
  </div>
   <%= link_to_remove_association "商品情報を削除する", f %>
</div>



