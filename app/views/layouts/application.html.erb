<!DOCTYPE html>
<html>
  <head>
    <title>AccoutsKeeper</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= include_gon %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body> 
    <%= render "shared/layouts/header" %>
    <%# フラッシュ %>
    <% if flash[:notice] %>
       <p class= "alert alert-info text-center time-limit" id = "flash-message"><%= notice %></p>
    <% elsif flash[:alert] %>
       <p class = "alert alert-danger text-center time-limit"><%= alert %></p>
    <% end %>
    <%# フラッシュここまで %>
    <%= yield %>
  </body>

</html>
